@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <P>No Movies are available</P>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr> <th>Movies</th></tr>
            <tr> <th>Genre</th></tr>
        </thead>
        <tbody>

            @foreach (var movie in Model)
                {
                    <tr><td>@Html.ActionLink(@movie.Name, "MovieDetails", new {id =@movie.Id},null)  </td></tr>
                    
            }

        </tbody>

        </table>
                }

