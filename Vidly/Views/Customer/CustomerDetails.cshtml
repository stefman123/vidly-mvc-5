@model Vidly.Models.Customer
@{
    ViewBag.Title = "CustomerDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customer Details</h1>

<h2>@Model.Name</h2>

<ul>
    <li> Membership Type: @Model.Name</li>
    <li>@Model.MembershipType.Name</li>

    @if (!string.IsNullOrEmpty(Model.BirthDate.ToString()))
    {
        <li>Birthdate: @($"{@Model.BirthDate:dd/MM/yyyy}")</li>
    }
</ul>




