@model List<Vidly.Models.Customer>  

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>


@if (Model.Count == 0)
{
    <p>No Customers</p>
}

else
{

    <ul>
        @foreach (var customer in Model)
        {
           @ <li>@customer.Name</li>
        }
    </ul>


}