@model IEnumerable<Vidly.Models.Customer>
@using System.Linq

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>


@if (!Model.Any())
{
    <p>No Customers</p>
}

else
{

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Customers</th>
            <th>Discount Rate</th>
        </tr>
        </thead>
        <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(@customer.Name, "CustomerDetails", "Customer", new {id = @customer.Id}, null)</td>
                        <td>@customer.MembershipType.Name</td>

                    </tr>
                }
    </tbody>

    </table>
}
