@model List<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>


@if (Model.Count == 0)
{
    <p>No Customers</p>
}

else
{

    <table class="table table-bordered table-hover">
        <thead>
            <tr> <th>Movies</th></tr>
        </thead>
        <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(@customer.Name, "CustomerDetails", "Customer", new { id = @customer.ID }, null)
                
                        </td>
                    </tr>
                }
    </tbody>

    </table>
}
